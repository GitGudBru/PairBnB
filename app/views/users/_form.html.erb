<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="fullname-field">
  <%= form.label :fullname %>
  <%= form.text_field :fullname, type: 'fullname' %>
</div>

<div class="gender-field">
<%= form.radio_button(:gender, "undefined") %>
<%= label_tag(:age_child, "Undefined") %>
<%= form.radio_button(:gender, "Male") %>
<%= label_tag(:age_adult, "Male") %>
<%= form.radio_button(:gender, "Female") %>
<%= label_tag(:gender, "Female") %>
</div>

<%=form.number_field(:age, in: 7..100, step: 1) %>